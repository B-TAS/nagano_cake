<div class="container">
  <div class="row m-5">
    <div class="col-lg-4">
      <h4><i class="fas fa-heart color_red"></i>新規会員登録</h4>
<!--置き換え前-->
<%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <table>
      <tr>
        <th>名前</th>
            <td>（姓）<%= f.text_field :last_name, placeholder: "令和", autofocus: true, class: "name textlines-radius" %></td>
            <td>（名）<%= f.text_field :first_name, placeholder: "道子", autofocus: true, class: "name textlines-radius" %></td>
      </tr>
        <th>フリガナ</th>
          <td>（セイ)<%= f.text_field :kana_last_name, placeholder: "レイワ", autofocus: true, class: "name textlines-radius" %></td>
          <td>（メイ）<%= f.text_field :kana_first_name, placeholder: "ミチコ", autofocus: true, class: "name textlines-radius" %></td>
      </tr>
      <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email, autofocus: true, placeholder: "hakumai@genmai", autocomplete: "email",class: "name textlines-radius" %></td>
          <td></td>
      </tr>
      <tr>
          <th class="nowrap">郵便番号（ハイフンなし）</th>
          <td><%= f.text_field :postcode, autofocus: true, placeholder: "0000000",  placeholder: "1004222", class: "name textlines-radius" %></td>
          <td></td>
      </tr>
      <tr>
          <th>住所</th>
          <td colspan="2"><%= f.text_field :address, autofocus: true, placeholder: "炭水県化物市", class: "name textlines-radius", size:50 %></td>
      </tr>
      <tr>
          <th class="nowrap">電話番号（ハイフンなし）</th>
          <td><%= f.text_field :phone_number, autofocus: true, placeholder: "00000000000", class: "name textlines-radius" %></td>
          <td></td>
      </tr>
      <tr>
          <th>パスワード
              <% if @minimum_password_length %>
               <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %></th>
          <td><%= f.password_field :password, autocomplete: "new-password",class: "name textlines-radius" %></td>
          <td></td>
      </tr>
      <tr>
          <th>パスワード（確認用）</th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password",class: "name textlines-radius" %></td>
          <td></td>
      </tr>
      <tr align="center">
          <td></td>
          <th class="button text-left"><%= f.submit "新規登録", class: 'btn btn-success' %></th>
          <td></td>
      </tr>
  </table>
<% end %>

<div class="row m-3"></div>
<%= render "public/shared/links" %>
</div>
</div>
</div>
