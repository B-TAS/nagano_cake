<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h4><i class="fas fa-heart color_red"></i>新規会員登録</h4>
<!--置き換え前-->
<%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <table>
      <tr>
        <th>名前</th>
            <th>（姓）<%= f.text_field :last_name, placeholder: "令和", autofocus: true, class: "name" %></th>
            <th>（名）<%= f.text_field :first_name, placeholder: "道子", autofocus: true, class: "name" %></th>
      </tr>
      <tr>
        <th>フリガナ</th>
          <th>（セイ)<%= f.text_field :kana_last_name, placeholder: "レイワ", autofocus: true, class: "name" %></th>
          <th>（メイ）<%= f.text_field :kana_first_name, placeholder: "ミチコ", autofocus: true, class: "name" %></th>
      </tr>
      <tr>
          <th>メールアドレス</th>
          <th><%= f.email_field :email, autofocus: true, placeholder: "hakumai@genmai", autocomplete: "email" %></th>
      </tr>
      <tr>
          <th>郵便番号（ハイフンなし） %></th>
          <%= f.text_field :postcode, autofocus: true, placeholder: "0000000",  placeholder: "1004222", class: "name" %>
  </div>
  <div class="field">
          <%= f.label :住所 %><br />
          <%= f.text_field :address, autofocus: true, placeholder: "うどん県", class: "name" %>
  </div>
  <div class="field">
          <%= f.label :電話番号（ハイフンなし） %><br />
          <%= f.text_field :phone_number, autofocus: true, placeholder: "00000000000", class: "name" %>
  </div>
  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
  </table>
 
<% end %>

<%= render "public/shared/links" %>
