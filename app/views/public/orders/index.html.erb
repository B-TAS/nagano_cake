<div>注文履歴一覧</div>

<div class ="row">
  <table class="table table-bordered">
    <thead>
      <tr class="table-active">
        <th scope="col">注文日</th>
        <th scope="col">配送先</th>
        <th scope="col">注文商品</th>
        <th scope="col">支払金額</th>
        <th scope="col">ステータス</th>
        <th scope="col">注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <th><%= order.created_at %></th>
          <th><%= order.address %></th>
          <th>
            <% order.order_details.each do |details| %>
            <%= details.item.name %><br>
            <% end %>
          </th>
          <th><%= order.total_price %></th>
          <th><%= order.status %></th>
          <th><%= link_to "表示する", order_path(order.id), class: "btn btn-sm btn-primary"%></th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>