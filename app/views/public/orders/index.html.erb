<div class="container">
  <div class="row mt-5 mb-3">
    <h4><i class="fas fa-heart color_red"></i> 注文履歴一覧</h4>
  </div>
  <div class ="row mb-5 pb-5">
    <table class="table table-bordered">
      <thead>
        <tr class="table-active">
          <th scope="col">注文日</th>
          <th scope="col">配送先</th>
          <th scope="col">注文商品</th>
          <th scope="col">支払金額</th>
          <th scope="col">ステータス</th>
          <th scope="col">注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr class="table-light">
            <th><%= order.created_at.strftime('%Y/%m/%d') %></th>
            <th>
              〒<%= order.postcode%><br>
              <%= order.address %><br>
              <%= order.name %>
            </th>
            <th>
              <% order.order_details.each do |details| %>
              <%= details.item.name %><br>
              <% end %>
            </th>
            <th><%= order.total_price.to_s(:delimited) %></th>
            <th><%= order.status_i18n %></th>
            <th><%= link_to "表示する", order_path(order.id), class: "btn btn-sm btn-info"%></th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>


