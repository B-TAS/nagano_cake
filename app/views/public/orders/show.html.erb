<h2>注文履歴詳細</h2>
<div class ="row">
  <div>
    <div>
      <h3>注文情報</h3>
      <table class = "table table-bordered">
        <thead>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td><%= @order.address %></td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.order_method_i18n %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.status_i18n %></td>
          </tr>
        </thead>
      </table>
    </div>
    <div>
      <h3>請求情報</h3>
      <table class = "table table-bordered">
        <tbody>
          <tr>
            <th>商品合計</th>
            <td><%= @order.total_price %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td><%= @order.total_price + @order.postage %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div>
    <h3>注文内容</h3>
    <table class = "table table-botdered">
      <tbody>
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
        <% @order.order_details.each do |details|%>
        <tr>
          <th><%= details.item.name %></th>
          <th><%= details.price %></th>
          <th><%= details.amount %></th>
          <th><%= details.price * details.amount %></th>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>