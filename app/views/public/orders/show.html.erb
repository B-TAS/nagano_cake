<div class="container">
  <div class="row mt-5 mb-3">
    <h4> <i class="fas fa-heart color_red"></i>注文履歴詳細</h4>
  </div>
  <div class="row">
    <div class="col-md-8">
      <h6><strong>注文情報</strong></h6>
      <table class = "table table-bordered">
          <tr>
            <th class="table-active">注文日</th>
            <td class="table-light"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th class="table-active">配送先</th>
            <td class="table-light"><%= @order.address %></td>
          </tr>
          <tr>
            <th class="table-active">支払方法</th>
            <td class="table-light"><%= @order.order_method_i18n %></td>
          </tr>
          <tr>
            <th class="table-active">ステータス</th>
            <td class="table-light"><%= @order.status_i18n %></td>
          </tr>
      </table>
    </div>
    <div class="col-md-4">
      <h6><strong>請求情報</strong></h6>
      <table class = "table table-bordered">
        <tr>
          <th class="table-active">商品合計</th>
          <td class="table-light"><%= @order.total_price.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class="table-active">配送料</th>
          <td class="table-light"><%= @order.postage.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class="table-active">ご請求額</th>
          <td class="table-light"><%= (@order.total_price + @order.postage).to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row-md-8 mb-5 pb-5">
    <h6><strong>注文内容</strong></h6>
    <table class = "table table-botdered">
        <tr class="table-active">
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
        <% @order.order_details.each do |details|%>
        <tr class="table-light">
          <th><%= details.item.name %></th>
          <th><%= details.price.to_s(:delimited) %></th>
          <th><%= details.amount %></th>
          <th><%= (details.price * details.amount).to_s(:delimited) %></th>
        </tr>
        <% end %>
    </table>
  </div>

</div>