<div class="container">
  <div class="row mt-5 mb-5">
    <div class="col-3">
      <%= render 'admin/genres/genre', genre:@genre%>
    </div>

    <div class="col-9">
      <table>
        <tr>
          <th><h4><i class="fas fa-heart color_red"></i> 商品一覧</h4></th>
          <td>　(全<%= Item.count %>件)</td>
        </tr>
      </table>

        <div class="conteiner">
          <div class="row">
            <div class="col mb-4">
              <div class="d-flex flex-wrap">
                <% @items.each do |item| %>
                <div class="m-4">
                  <%= image_tag item.get_image, size: "200x150" %><br>
                  <%= link_to item.name, item_path(item.id), class: "text-decoration-none text-info font-weight-bold" %><br>
                  ¥ <%= item.price.to_s(:delimited) %><br>
                </div>
                <% end %>
              </div>
              <p class="mt-3"><%= paginate @items %></p>
            </div>
          </div>
        </div>
    </div>

  </div>
</div>