<div class="container">
  <div class="row mt-5 mb-5">
    <div class="col-3">
      <table class="table">
        <tr>
          <th class="table-dangre">ジャンル検索</th>
        </tr>
        <% @genre.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="col-9">
      <table>
        <tr>
          <th><h4>商品一覧</h4></th>
          <td>　(全<%= Item.count %>件)</td>
        </tr>
      </table>
        <div class="conteiner">
          <div class="row">
            <div class="col">
              <div class="d-flex flex-wrap">
                <% @items.each do |item| %>
                <div class="col-2 h-25 m-4">
                  <%= image_tag item.get_image(120, 120) %>
                  <%= link_to item.name, item_path(item.id) %><br>
                  ￥<%= item.price %><br>
                </div>
                <% end %>
              </div>
              <p class="mt-3"><%= paginate @items %></p>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>