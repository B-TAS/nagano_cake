<div class= "container">
  <h4 class="py-4">マイページ</h4>
    <div class="mb-2 ">
      <strong>登録情報</strong>
      <%= link_to "編集する", my_page_edit_path, class: 'btn btn-success' %>
    </div>
    <%= form_with model: @customer, url: customer_path(@customer), method: :GET do |f| %>
      <table border="1" style="border-collapse: collapse" class="table-sm" width="600">
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @customer.kana_last_name %><%= @customer.kana_first_name %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postcode %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    <% end %>

    <div class="mt-4 mb-2">
      <strong>配達先</strong>
      <%= link_to "一覧を見る", deliveries_path, class: 'glyphicon glyphicon-home btn btn-primary' %>
    </div>
    <div class="mt-2 mb-4">
      <strong>注文履歴</strong>
      <%= link_to "一覧を見る", order_path(current_customer.id), class: 'glyphicon glyphicon-home btn btn-primary' %>
    </div>
</div>