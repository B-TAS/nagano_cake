<div class= "container">
  <div class="row m-5">
    <h4><i class="fas fa-heart color_red"></i> 会員情報編集</h4>
  </div>

  <div class="row m-5">
    <%= form_with model: @customer, url: customer_path(@customer), method: :patch do |f| %>
      <table>
        <tr>
          <th>氏名</th>
          <td><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= f.text_field :kana_last_name %></td>
          <td><%= f.text_field :kana_first_name %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= f.text_field :postcode %></td>
          <td></td>
        </tr>
         <tr>
          <th>住所</th>
          <td colspan="2"><%= f.text_field :address, :size => 50 %></td>
        </tr>
         <tr>
          <th>電話番号</th>
          <td><%= f.text_field :phone_number %></td>
          <td></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email %></td>
          <td></td>
        </tr>
        <tr>
          <th class="pt-3"></th>
          <td class="pt-3"><%= f.submit '編集内容を保存する', class: 'btn btn-info' %></td>
          <td class="pt-3"><%= link_to '退会する', customers_confirm_path, class: "glyphicon glyphicon-tint btn btn-danger" %></td>
        </tr>
      </table>
      <% end %>
    </div>

  </div>
</div>