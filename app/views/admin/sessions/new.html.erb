<div class="container">
  <div class="row m-5">
      <h4><i class="fas fa-heart color_red"></i> 管理者ログイン</h4>
    </div>
    <div class="row justify-content-center">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     <table class='table table-borderless'>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "textlines-radius", size:50 %></td>
        </tr>
        <tr>
          <th>パスワード</th>
          <td><%= f.password_field :password, autocomplete: "current-password", class: "textlines-radius", size:50 %></td>
        </tr>

  <!--今回は不要のためコメントアウト-->
  <%# if devise_mapping.rememberable? %>
    <!--<div class="field">-->
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>

    <!--</div>-->
  <%# end %>
        <td></td>
        <th><%= f.submit "ログイン", class: "btn btn-success" %></th>
      </tr>
    </table>
  </table>
  <% end %>
  </div>
  </div>

  <%= render "admin/shared/links" %>
