<div class="container">
  <div class="row m-5">
    <h4>管理者ログイン</h4>

    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
  <table>
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "textlines-radius"  %>
    </div>

    <div class="field">
    <%= f.label :パスワード %>
    <%= f.password_field :password, autocomplete: "current-password", class: "textlines-radius" %>
    </div>

  <!--今回は不要のためコメントアウト-->
  <%# if devise_mapping.rememberable? %>
    <!--<div class="field">-->
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>

    <!--</div>-->
  <%# end %>

    <div class="actions">
    <%= f.submit "ログイン" %>
    </div>
  </table>
  <% end %>
  </div>

  <%= render "admin/shared/links" %>
    </div>
  </div>
</div>