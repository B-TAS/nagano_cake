<h2>商品詳細</h2>
<div>
  <%= image_tag @item.image, size: "200x200" %>
</div>
<div>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>商品説明</th>
        <th>ジャンル</th>
        <th>税込価格<br>（税抜価格）</th>
        <th>販売ステータス</th>
      </tr>
    </thead>
  </table>
  <tbody>
    <tr>
      <td><%= @item.name %></td>
      <td><%= @item.introduction %></td>
      <td><%= @item.genre_id %></td>
      <td><%= @item.price %></td>
      <td><%= @item.is_active %></td>
    </tr>
  </tbody>
</div>
  <%= link_to "編集する", edit_admin_item_path(@item) class: "btn btn-success" %>

  <!--テスト用-->
  <%= link_to "Destroy", admin_item_path, method: :delete %>