<h2>商品編集</h2>
<%= form_with model: @item, url:admin_item_path(@item.id), local: true do |f| %>
  <table>
      <tr>
        <th>商品画像</th>
        <td><%= f.file_field :image, accept: "image/*"%></td>
      </tr>
      <tr>
        <th>商品名</th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th>商品説明</th>
        <td><%= f.text_area :introduction %></td>
      </tr>
      <tr>
        <th>ジャンル</th>
        <td><%= f.collection_select :genre_id, Genre.all, :id, :name, {include_blank: "--選択してください--"} %></td>
      </tr>
      <tr>
        <th>税込価格</th>
        <td><%= f.text_field :price %>円</td>
      </tr>
      <tr>
        <th>販売ステータス</th>
        <td>
          <%= f.radio_button :is_active, :in_store_now %>
          <%= f.label :is_active, "販売中", {value: :in_store_now, style: "display: inline-block;"} %>
          <%= f.radio_button :is_active, :sold_out %>
          <%= f.label :is_active, "売り切れ", {value: :sold_out, style: "display: inline-block;"} %>
        </td>
      </tr>
  </table>
  <%= f.submit "更新する", class: "btn btn-success" %>
<% end %>
