<div class= "container">
  <div class="row m-5">
      <h4 class="text-center px-3">
        <i class="fas fa-heart color_red"></i> 
        <%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細
      </h4>
  </div>
  
  <div class="row mt-5 justify-content-center">
    <div class="col">
      <%= form_with model: @customer, url: admin_customer_path(@customer), method: :GET do |f| %>
      <table class="table table-borderless">
      <tr>
        <th>会員ID</th>
        <td colspan="2"><%= @customer.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td colspan="2"><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td colspan="2"><%= @customer.kana_last_name %><%= @customer.kana_first_name %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td colspan="2"><%= @customer.postcode %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td colspan="2"><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td colspan="2"><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td colspan="2"><%= @customer.email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td colspan="2">
          <% if @customer.is_deleted == false %>
            <span class="valid-status">有効</span>
          <% else %>
            <span class="deleted-status">退会</span>
          <% end %>
        </td>
      </tr>

    <% end %>
      <tr>
        <th></th>
        <th><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success ml-4" %></th>
        <th><%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-info ml-4" %></th>
      </tr>
      </table>
          </div>
        </div>
      </div>
    </div>
  </div>