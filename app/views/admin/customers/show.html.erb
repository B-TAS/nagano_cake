<div class= "container">
  <div class="row">
    <div class="text-center">
      <h4 class="table-active text-center px-3">
        <%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細
      </h4>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-sm-12 col-md-8 px-5 px-sm-0 mr-auto">
    <%= form_with model: @customer, url: admin_customer_path(@customer), method: :GET do |f| %>
    <table class="table table-borderless table-sm table-hover col-sm-12 col-md-8 px-5 px-sm-0 mr-auto">
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%= @customer.kana_last_name %><%= @customer.kana_first_name %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postcode %></td>
      </tr>
       <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
       <tr>
        <th>電話番号</th>
        <td><%= @customer.phone_number %></td>
      </tr>
       <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td>
          <% if @customer.is_deleted == false %>
            <span class="valid-status">有効</span>
          <% else %>
            <span class="deleted-status">退会</span>
          <% end %>
        </td>
      </tr>

    <% end %>
      <tr>
        <th></th>
        <th><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success ml-4" %></th>
        <th><%= link_to "注文履歴一覧を見る", root_path, class: "btn btn-primary ml-4" %></th>
      </tr>
      </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>