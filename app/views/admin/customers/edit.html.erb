<div class= "container">
  <div class="row m-5">
    <h4><i class="fas fa-heart color_red"></i> <%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
  </div>

  <div class="row m-5 pb-5">
    <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch  do |f| %>
      <table>
        <tr>
          <th class="p-3">会員ID</th>
          <td class="p-3"><%= @customer.id %></td>
          <td class="p-3"></td>
        </tr>
        <tr>
          <th class="p-3">氏名</th>
          <td class="p-3"><%= f.text_field :last_name %></td>
          <td class="p-3"><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th class="p-3">フリガナ</th>
          <td class="p-3"><%= f.text_field :kana_last_name %></td>
          <td class="p-3"><%= f.text_field :kana_first_name %></td>
        </tr>
        <tr>
          <th class="p-3">郵便番号</th>
          <td class="p-3"><%= f.text_field :postcode %></td>
          <td class="p-3"></td>
        </tr>
        <tr>
          <th class="p-3">住所</th>
          <td class="p-3" colspan="2"><%= f.text_field :address, :size => 50 %></td>
        </tr>
         <tr>
          <th class="p-3">電話番号</th>
          <td class="p-3"><%= f.text_field :phone_number %></td>
          <td class="p-3"></td>
        </tr>
        <tr>
          <th class="p-3">メールアドレス</th>
          <td class="p-3"><%= f.text_field :email %></td>
          <td class="p-3"></td>
        </tr>
        <tr>
          <th class="p-3">会員ステータス</th>
          <td class="p-3">
            <%= f.radio_button :is_deleted, :false, checked: true %>
            <%= f.label :is_deleted_false, '有効　', {value: :false} %>
            <%= f.radio_button :is_deleted, :true %>
            <%= f.label :is_deleted_true, '退会', {value: :true} %>
          </td>
          <td></td>
        </tr>
        <tr>
          <th class="p-3"></th>
          <td class="p-3"><%= f.submit '変更を保存', class: 'btn btn-success' %></td>
          <td class="p-3"></td>
        </tr>
      </table>
      <% end %>
    </div>

  </div>
</div>
