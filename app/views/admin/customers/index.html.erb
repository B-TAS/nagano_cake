<div class= "container">
  <div class="row m-5">
      <h4><i class="fas fa-heart color_red"></i> 会員一覧</h4>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <table class="table table-hover">
        <thead>
          <tr class="table-active">
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr class="table-light">
            <td><%= customer.id %></td>
              <td><%= link_to "#{customer.last_name}#{customer.first_name}", admin_customer_path(customer.id), class: "text-decoration-none text-info font-weight-bold" %></td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted == false %>
                  <span class="valid-status">有効</span>
                <% else %>
                  <span class="deleted-status">退会</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="pagination">
    <%= paginate @customers %>
  </div>
</div>
