<div class= "container">
  <h4 class="mt-4 mb-2">注文履歴詳細</h4>
  <table>
    <% @orders.each do |order| %>
      <tr>
        <th>購入者</th>
        <td>
          <%= order.customer.last_name %>
          <%= order.customer.first_name %>
        </td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
          〒<%= order.postcode %>
            <%= order.address %>
        </td>
      <tr>
        <th></th>
        <td><%= order.name %></td>
      </tr>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td><%= order.status %></td>
      </tr>
    <% end %>
  </table>

  <p></p>

  <table class="table">
    <% @order_details.each do |order_detail| %>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
      </thead>
    <tbody>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.subtotal %></td>
            <td></td>
      </tbody>
    <% end %>
  </table>

  <p></p>

  <table>
    <% @orders.each do |order| %>
      <tr>
        <th>商品合計</th>
        <td><%= order.total_price %>円</td>
      </tr>
      <tr>
        <th>送料</th>
        <td><%= order.postage %>円</td>
      </tr>
      <tr>
        <th>請求金額合計</th>
        <td><%= order.total_price + order.postage %>円</td>
      </tr>
    <% end %>
  </table>
</div>