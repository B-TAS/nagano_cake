<div class= "container">
  <h4 class="mt-4 mb-2">注文履歴詳細</h4>

    <table>
      <tr>
        <th>購入者</th>
        <td>
          <%= @customer.last_name %>
          <%= @customer.first_name %>
        </td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
       <tr>
        <th>配送先</th>
        <td>
          〒<%= @order.postcode %>
            <%= @order.address %>
        </td>
      <tr>
        <th></th>
        <td><%= @order.name %></td>
      </tr>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td>
          <%= form_with model: @order do |f| %>
          <%= f.select :status, { "入金待ち": "payment_waiting", "入金確認": "payment_confirmation", "製作中": "in_production", "発送準備中": "preparing_delivery", "発送済み": "delivered" }, { include_blank: true } %>
          <%= f.submit "更新", class: "btn-success" %>
          <% end %>
        </td>
      </tr>
    </table>
    <p></p>
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.subtotal %></td>
            <td>
              <%= form_with model: @order_detail do |f| %>
              <%= f.select :making_status, { "製作不可": "production_not_possible", "製作待ち": "production_pending", "製作中": "in_production", "製作完了": "production_complete" }, { include_blank: true } %>
              <%= f.submit "更新", class: "btn-success" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <p></p>
    <table>
      <tr>
        <th>商品合計</th>
        <td><%= @order.total_price %>円</td>
      </tr>
      <tr>
        <th>送料</th>
        <td><%= @order.postage %>円</td>
      </tr>
      <tr>
        <th>請求金額合計</th>
        <td><%= @order.total_price + @order.postage %>円</td>
      </tr>
    </table>
</div>
