<h3>ジャンル一覧・追加</h3>
<div>
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <b><%= f.label :ジャンル名 %></b>
    <%= f.text_field :name, placeholder: "ジャンル名" %>
    <%= f.submit '新規登録' %>
  <% end %>
</div>

<table>
  <tr>
    <th colspan="3">ジャンル</th>
  </tr>
  <% @genres.each do |genre| %>
  <tr>
    <td><%= genre.name %></td>
    <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
    <td><%= link_to "削除する", admin_genre_path(genre.id), method: :delete %></td>
  </tr>
  <% end %>
</table>