<div class="container">
  <div class="row m-5">
    <h4><i class="fas fa-heart color_red"></i> ジャンル一覧・追加</h4>
  </div>
  <div class="row m-5">

      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <table>
          <tr>
            <th class="px-2"><%= f.label :ジャンル名 %></th>
            <td class="px-2"><%= f.text_field :name, placeholder: "ジャンル名" %></td>
            <td class="px-2"><%= f.submit '新規登録', class: 'btn btn-info' %></td>
          </tr>
        </table>
      <% end %>
  </div>
  <div class="row m-5">
    <div class="col-md-5">
    <table class="table">
      <tr class="table-active">
        <th class="text-center">ジャンル</th>
        <th></th>
      </tr>
      <% @genres.each do |genre| %>
      <tr class="table-light">
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-info' %></td>
      </tr>
      <% end %>
    </table>
    </div>
  </div>
</div>

